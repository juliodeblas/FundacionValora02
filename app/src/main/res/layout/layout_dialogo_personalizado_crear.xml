<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:background="@color/light_white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/valora"
        android:layout_margin="10dp"></ImageView>

    <EditText
        android:id="@+id/edit_nombre_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/edit_apellidos_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce apellidos"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/edit_numero_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nÃºmero"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_perfil_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce perfil"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/edit_grupo_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce grupo"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/edit_id_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <Button
        android:id="@+id/button_crear_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR"
        android:layout_margin="10dp"/>

</LinearLayout>