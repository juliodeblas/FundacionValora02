<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_item_blanco">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/valora"
        android:layout_margin="10dp"></ImageView>

    <EditText
        android:id="@+id/edit_nombre_dialogo_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre"
        android:inputType="textCapSentences"
        android:drawableLeft="@drawable/nombre_modulo"
        android:drawablePadding="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_apellidos_dialogo_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce apellidos"
        android:inputType="textCapSentences"
        android:drawableLeft="@drawable/ic_wireframe"
        android:drawablePadding="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_numero_dialogo_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nÃºmero"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_number"
        android:drawablePadding="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_perfil_dialogo_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce perfil"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/ic_resume"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:lines="3"
        android:gravity="top"/>

    <EditText
        android:id="@+id/edit_grupo_dialogo_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce grupo"
        android:inputType="textCapSentences"
        android:drawableLeft="@drawable/ic_employee"
        android:drawablePadding="10dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/edit_id_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <Button
        android:id="@+id/button_actualizar_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_item_amarillo"/>

</LinearLayout>